<title>ICE SNEAKERS</title>
<body>

	
	<div class="header">

		<div class="container">
			<div class="navbar">
				<div class="logo">
					<a @Html.ActionLink("","","Home") <img src="~/images/logo1.png" width="150"> </a>


				</div>
				<nav>
					<ul id="MenuItems">




						<li><a @Html.ActionLink("HOME","Index","Home") </a></li>
						<li><a @Html.ActionLink("PRODUCTS","Products","Home") </a></li>
						<li><a @Html.ActionLink("ACCOUNT","Login","UserAuthentication")</a></li>
						<li><a href="">CONTACT</a></li>
						<li><a href="@Url.Action("cart","Home")">
							<img src="~/images/cart.png" width="30" height="30">
						</a>
                        </li>
					</ul>
				</nav>

				
				<img src="~/images/menu.png" class="menu-icon" onclick="menutoggle()">
			</div>

		</div>
	</div>

	<div class="container">
		@RenderBody()
	</div>
	<div class="footer">
		<div class="container">
			<div class="row">
				<div class="footer-col-1">

