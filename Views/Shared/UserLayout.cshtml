<!DOCTYPE html>
<html lang="en">
<head>
	<link href="c:\users\bagour\desktop\dotnet6-mvc-login-master\dotnet6mvclogin\css\site.css" rel="stylesheet" />
	<link href="~/css/site.css" rel="stylesheet" />
	<link href="~/css/style.css" rel="stylesheet" />
	<script src="~/js/site.js"></script>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=devise-width, initial-scale=1.0">
	<link href="https://fonts.googleapis.com/css2? family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />

</head>
<title>ICE SNEAKERS</title>
<body>


	<div class="header">

		<div class="container">
			<div class="navbar">
				<div class="logo">
					<a @Html.ActionLink("","","Home") <img src="~/images/logo1.png" width="125"> </a>


				</div>
				<nav>
					<ul id="MenuItems">




						<li><a @Html.ActionLink("HOME","Index","Home") </a></li>
						<li><a @Html.ActionLink("PRODUCTS","Products","Home") </a></li>
						<li><a @Html.ActionLink("ACCOUNT","AccountDetails","Dashboard")</a></li>
						<li>
							<a
							href="@Url.Action("cart","Home")">
							 <img src="~/images/cart.png" width="30" height="30">
							 </a>
						</li>
					</ul>
				</nav>

               
				<img src="~/images/menu.png" class="menu-icon" onclick="menutoggle()">
			</div>

		</div>
	</div>

	<div class="container">
		@RenderBody()
	</div>
	<div class="footer">
		<div class="container">
			<div class="row">
				<div class="footer-col-1">
					<h3>Coming Soon On App Store</h3>
					<img src="~/images/app-store.png">
				</div>
				<div class="footer-col-2">

					<p>
						Our Purpose Is To sustainably Make The Pleasure And Benefits
						Of Sneakers Accessible to All
					</p>
				</div>
				<div class="footer-col-3">
					<h3>Follow Us</h3>
					<ul>
						<li>Facebook</li>
						<li>Twitter</li>
						<li>Instagram</li>

					</ul>

				</div>
			</div>
			<hr>
			<p class="copyright">Copyright 2022 -iceSNKS</p>
		</div>
	</div>



	@await RenderSectionAsync("Scripts", required: false)

	<script>
		var MenuItems = document.getElementById("MenuItems");
		MenuItems.style.maxHeight = "0px";
		function menutoggle() {
			if (MenuItems.style.maxHeight == "0px") {
				MenuItems.style.maxHeight = "200px";
			}
			else {
				MenuItems.style.maxHeight = "0px";
			}

		}
	</script>
</body>
</html>
